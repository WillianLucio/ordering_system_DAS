<div class="container">
  <div class="row">
    <div class="col">
      <a class="btn btn-primary" href="/clients/new" role="button">Add</a>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-striped table-sm">
        <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Phone</th>
              <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
          <% @clients.each do |c| %>
            <tr>
              <th scope="row"><%= c.id %></th>
              <td><%= c.name %></td>
              <td><%= c.phone %></td>
              <td>
                <div class="row">
                  <div class="col-lg-2 col-md-3 col-sm-3">
                    <a class="btn btn-warning" href="<%= "/clients/#{c.id}/edit"%>" role="button">Edit</a>
                  </div>
                  <div class="col-lg-2 col-md-3 col-sm-3">
                    <%= button_to "delete", c, :method => :delete, class: "btn btn-danger" %>
                  </div>
              </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
