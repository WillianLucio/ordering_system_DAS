<div class="container">
  <div class="row">
    <div class="col">
      <a class="btn btn-primary" href="<%= new_order_path %>" role="button">Add</a>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-striped table-sm">
        <thead>
            <tr>
              <th scope="col">Id</th>
              <th scope="col">Client</th>
              <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
          <% @orders.each do |o| %>
            <tr>
              <th scope="row"><%= o.id %></th>
              <td><%= o.client.name %></td>
              <td>
                <div class="row">
                  <div class="col-lg-2 col-md-3 col-sm-3">
                    <a class="btn btn-warning" href="<%= "/orders/#{o.id}/edit"%>" role="button">Edit</a>
                  </div>
                  <div class="col-lg-2 col-md-3 col-sm-3">
                    <%= button_to "delete", o, :method => :delete, class: "btn btn-danger" %>
                  </div>
              </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
