<div class="container">
  <%= simple_form_for(@order) do |f| %>
    <div class="row">
      <div class="col">
          <%= f.association :client %>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <%= f.fields_for :order_products do |product_fields| %>
          <%= render partial: "order_product_fields", locals: { f: product_fields } %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <%= link_to_add_association('Add Products', f, :order_products, class: "btn btn-primary add_products_order") %>
    </div>

    <div class="row">
      <%= f.submit "Save Order", class: "btn btn-success save_order" %>
    </div>
  <% end %>
</div>
